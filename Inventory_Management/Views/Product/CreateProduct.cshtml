@model Inventory_Management.Models.product

@{
    ViewBag.Title = "Create Product";
}

<h2>Enter Product Details</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Product", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.product_name)
                @Html.ValidationMessageFor(model => model.product_name)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Quantity", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.product_quantity)
                @Html.ValidationMessageFor(model => model.product_quantity)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "DisplayProduct")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
